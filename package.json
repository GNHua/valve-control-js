{
  "name": "ValveControl",
  "version": "0.0.1",
  "description": "An Elctron app to control solenoid valves via USB-serial port and Arduino Uno",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . ValveControl --overwrite --asar=true --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Valve Control App\"",
    "package-linux": "electron-packager . ValveControl --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds"
  },
  "author": "HG",
  "license": "MIT",
  "dependencies": {
    "serialport": "^7.0.2"
  },
  "devDependencies": {
    "electron": "^3.0.0",
    "electron-packager": "^12.1.1",
    "electron-rebuild": "^1.8.2"
  }
}
